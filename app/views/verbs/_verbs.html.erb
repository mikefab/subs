<script>
    $(function(){

		for(i=0;i<5;i++){
               $("#instruction3").animate({color: "red"}, 'slow');
               $("#instruction3").animate({color: "blue"}, 'slow');
}
    });

</script>

<%@verbs = eval(@verbs) if @verbs.class.to_s.match("String")%>
<%if @verbs%>

	<%c=0%>
	<%if @verbs.size==0 then%>
<div id="empty_verb_warning" style="position:relative">	There are no verbs for this tense yet.<br>
		Please click another tense.</div end="empty_verb_warning">
	<%else%>
	<div id="instruction3">Now, click a verb below<br>to see it in action
	</div end="instruction3">
	<div id="verb_place">
		<%@verbs.each do |k,v| %>
			<%c=c+1%>
	<div id="verb_container">
	<div id="<%=c%>_verb" title="<%=v%>-<%=Rails.cache.read("hash_trans")[v]%>"style="cursor:pointer;display:inline;" onClick="display_results(this.innerHTML);" ><%=k%></div end="<%=c%>_verb">
	</div end="verb_container">	

	<%end%>
</div end="verb_place">
	<%end%>
<%end%>